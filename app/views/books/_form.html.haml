= form_for(@book) do |f|
  - if @book.errors.any?
    %div#error_explanation
      %h2= pluralize(@book.errors.count, "error")

      %ul
        - @book.errors.full_messages.each do |msg|
          %li= msg

  %div.field
    = f.label :title
    %br
    = f.text_field :title
  %div.field
    = f.label :author
    %br
    = f.text_field :author
  %div.field
    = f.label :isbn
    %br
    = f.text_field :isbn
  %div.field
    = f.label :title_long
    %br
    = f.text_field :title_long
  %div.actions
    = f.submit :class => 'btn'
